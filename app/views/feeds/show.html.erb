<div style="padding-top: 50px;">
	<div style="display: center; width: 100%;">
		<a name="<%= @feed.id %>">
			<div style="padding: 10px;">
				<table>
					<tr>
						<td rowspan="2" style="padding: 0;width: 50px; height: 50px; background-position: center; background-repeat: no-repeat; overflow: hidden;" >
							<img style="width:50px; height: 50px; border-radius: 25px; -webkit-border-radius: 25px; -moz-border-radius: 25px; no-repeat;" src="<%=@feed.user.user_cover.image.url%>" />
						</td>
						<td style="padding: 0;"><%= @feed.user.user_cover.name %></td>
					</tr>
					<tr>
						<td style="padding: 0;"><%= @time_word %></td>
					</tr>
				</table>
			</div>
			<div style="margin-top: -4px;"><img style="width:100%" src="<%=@feed.feed_photos[0].image.url%>" /></div>
			<div style="padding: 20px 10px; margin-top:-4px;"><%= @feed.content %></div>
			<hr style="border-bottom: 0; color: gray; margin:0;" />
		</a>
	</div>
</div>
<div>
	<table style="width:100%">
		<tr>
			<td style="width:50%">
				<a href="/feeds" style="text-align:center; text-decoration: none; display:block; line-height:40px; margin-top:20px; height:40px; width:100%; background-color:#F3D407; border-radius:20px; -moz-border-radius:20px; -webkit-border-radius:20px; border:none; color:white; font-size:16px; font-weight:bold;">
	  				다른사진 더보기
	  			</a>
			<td style="width:50%">
				<a href="/member_notes?id=<%=@feed.user_id%>" style="text-align:center; text-decoration: none; display:block; line-height:40px; margin-top:20px; height:40px; width:100%; background-color:#F3D407; border-radius:20px; -moz-border-radius:20px; -webkit-border-radius:20px; border:none; color:white; font-size:16px; font-weight:bold;">
	  				이 친구의 사진 더보기
	  			</a>
			</td>
		</tr>
	</table>
</div>
