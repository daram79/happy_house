</style>
<script>
  var count = 0;
  function rotate() {
    var loading = document.getElementById('loading');
    loading.style.MozTransform = 'scale(0.5) rotate('+count+'deg)';
    loading.style.WebkitTransform = 'scale(0.5) rotate('+count+'deg)';
    if (count==360) { count = 0 }
    count+=45;
    window.setTimeout(rotate, 100);
  }
  
  window.setTimeout(rotate, 100);
  
  $(document).ready(function() {
  	setTimeout(function() {
		$("#loading").remove();
		$("#result").show();
		$("#btn_container").css({'margin-top':'0px'});
		
	}, 1000);
  });
  
  
</script>
