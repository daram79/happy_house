<script>
	cname = "uniq_key";
	if(document.cookie == ""){
	    var expire = new Date();
	    expire.setDate(expire.getDate() + 1000);
	    cookies = cname + '=' + getUUID() + '; path=/ '; 
	    cookies += ';expires=' + expire.toGMTString() + ';';
		document.cookie = cookies;
	}
	$("#play_uniq_key").val(getCookie());

	function getUUID() {
		return 'xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
		var r = Math.random()*16|0, v = c == 'x' ? r : (r&0x3|0x8);
		return v.toString(16);
		});
	}
	
	function getCookie() {
	    var name = cname + "=";
	    var ca = document.cookie.split(';');
	    for(var i=0; i<ca.length; i++) {
	        var c = ca[i];
	        while (c.charAt(0)==' ') c = c.substring(1);
	        if (c.indexOf(name) == 0) return c.substring(name.length,c.length);
	    }
	    return "";
	}
	
	$('#go').click(function(){
		var owner_name = $.trim( $("#play_owner_name").val() ); 
		var animal_name = $.trim( $("#play_animal_name").val()); 
	  	if ( owner_name == "" || animal_name == "" ) {
	  		alert("본인의 이름과 반려동물의 이름을 모두 입력해주세요.");
	  		return false;
	  	} else {
	  		$("#new_play").submit();
	  	}
	})
</script>
